<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myChecklist"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="룸메는?"
        android:textSize="23dp"
        android:padding="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="중복선택 가능!"
        android:textSize="12dp"
        android:padding="5dp"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나이"
        android:textSize="17dp"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cg1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="96"
            />
        <CheckBox
            android:id="@+id/cg1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="97"
            />
        <CheckBox
            android:id="@+id/cg1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="98"
            />
        <CheckBox
            android:id="@+id/cg1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            />
        <CheckBox
            android:id="@+id/cg1_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            />
        <CheckBox
            android:id="@+id/cg1_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            />
        <CheckBox
            android:id="@+id/cg1_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02"
            />
        <CheckBox
            android:id="@+id/cg1_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="흡연여부"
        android:textSize="17dp"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cg2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="흡연"
            />
        <CheckBox
            android:id="@+id/cg2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비흡연"
            />
    </LinearLayout>

</LinearLayout>